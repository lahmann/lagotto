<% unless @article.retrieval_statuses.empty? %>
  <div class="panel-group" id="retrieval_status">
    <% @article.retrieval_statuses.with_sources.each do |status| %>
      <% if !status.source.nil? %>
        <div class="panel <%= status.retrieved_at > '1970-01-01' ? 'panel-default' : 'panel-warning' %>" id="<%= status.source.name %>">
          <%= render partial: 'articles/source', locals: { status: status } %>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">There are currently no events</div>
<% end %>
