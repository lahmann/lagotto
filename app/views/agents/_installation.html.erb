<% if @groups.size > 0 %>
  <% @groups.with_agents.each do |group| %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= group.title %></div>
      <table class="table" id="<%= group.title %>Table">
        <thead>
          <tr>
            <th class="name">Agent</th>
            <th>Status</th>
            <% if can?(:manage, Alert) %>
              <th class="status">Actions</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% group.agents.each do |agent| %>
            <tr>
              <td><%= link_to_if agent.installed?, agent.title, agent_path(agent) %></td>
              <td><%= state_label(agent.human_state_name).html_safe %></td>
              <% if can?(:manage, Alert) %>
                <td>
                  <% if agent.human_state_name == "available" %>
                    <%= link_to 'Install', agent_path(agent, state_event: "install"), :method => :put, :data => { :confirm => 'Are you sure?' }, :remote => true, :class => 'btn btn-default btn-sm', :id => "#{agent.name}-status", :title => "Install agent" %>
                  <% elsif agent.human_state_name == "retired" %>
                  <% elsif agent.human_state_name == "inactive" %>
                    <%= link_to 'Activate', agent_path(agent, state_event: "activate"), :method => :put, :remote => true, :class => 'btn btn-success btn-sm', :id => "#{agent.name}-status", :title => "Activate agent" %>
                  <% else %>
                    <%= link_to 'Inactivate', agent_path(agent, state_event: "inactivate"), :method => :put, :remote => true, :class => 'btn btn-info btn-sm', :id => "#{agent.name}-status", :title => "Inactivate agent" %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-info">There are currently no groups</div>
<% end %>
