<div class="publisher">&nbsp;
  <div class="btn-toolbar btn-sm pull-right">
    <% if publishers.length > 1 %>
      <div class="btn-group btn-group-sm" id="article-publisher">
        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-filter"></span> <%= @publisher.nil? ? "All Publishers" : h(@publisher.name) %> <span class="caret"></span></a>
        <ul class="dropdown-menu pull-right">
          <li><%= link_to "All Publishers", source_path(@source, order: params[:order]) %></li>
          <li class="divider"></li>
          <% publishers.each do |publisher| %>
            <li><%= link_to publisher.name, source_path(@source, :publisher => publisher.crossref_id, order: params[:order]) %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="btn-group btn-group-sm" id="article-source">
      <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-sort"></span> <%= @order.nil? ? "Sort by Date" : "Sort by #{@order.display_name}" %> <span class="caret"></span></a>
      <ul class="dropdown-menu pull-right">
        <li><%= link_to "Date", source_path(@source) %></li>
        <li class="divider"></li>
        <li><%= link_to "Sort by #{@source.display_name}", source_path(@source, order: @source.name) %></li>
      </ul>
    </div>
  </div>
</div>

<div id="results"></div>
<div class="text-muted" id="loading-results">Loading page â€¦ <%= image_tag "spinner.gif" %></div>

<%= javascript_include_tag 'articles/index' %>
