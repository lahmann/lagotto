<% if @groups.size > 0 %>
  <% @groups.with_sources.each do |group| %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= group.title %></div>
      <table class="table" id="<%= group.title %>Table">
        <thead>
          <tr>
            <th class="name">Source</th>
            <th>Status</th>
            <% if can?(:manage, Alert) %>
              <th class="status">Actions</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% group.sources.each do |source| %>
            <tr>
              <td><%= link_to_if source.active?, source.title, source_path(source) %></td>
              <td><%= active_label(source.active).html_safe %></td>
              <% if can?(:manage, Alert) %>
                <td>
                  <% if source.active? %>
                    <%= link_to 'Inactivate', source_path(source, active: false), :method => :put, :remote => true, :class => 'btn btn-info btn-sm', :id => "#{source.name}-status", :title => "Inactivate Source" %>
                    <% else %>
                      <%= link_to 'Activate', source_path(source, active: true), :method => :put, :remote => true, :class => 'btn btn-success btn-sm', :id => "#{source.name}-status", :title => "Activate Source" %>
                    <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-info">There are currently no groups</div>
<% end %>
