<div class="panel panel-default">
  <div class="panel-heading panel-title">
    <div class="btn-toolbar pull-right">
      <div class="btn-group btn-group-sm">
        {{#link-to 'sources' classNames="btn btn-default"}}<i class="fa fa-pencil"></i>{{/link-to}}
      </div>
    </div>
    {{title}} <small class="pull-right">{{active-label status}}</small>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      {{#if group}}
        <dt>Group</dt>
        <dd>{{group.title}}</dd>
      {{/if}}
      {{#if description}}
        <dt>Description</dt>
        <dd>{{description}}</dd>
      {{/if}}
    </dl>
  </div>
</div>
